        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="60" >

            <syncfusion:ButtonAdv SizeMode="Large" LargeIcon="/assets/Icons/customer.png" Label="Añadir" Width="60"/>
